{
  "name": "@dlghq/dialog-components",
  "version": "0.26.1",
  "description": "Dialog Web Components",
  "main": "src/index.js",
  "files": [
    "src"
  ],
  "keywords": [
    "react",
    "components",
    "dialog"
  ],
  "scripts": {
    "start": "styleguidist server",
    "create": "node scripts/create-component.js",
    "build": "npm-run-all --parallel build:*",
    "build:lib": "node scripts/export.js",
    "build:l10n": "node scripts/compile-translations.js",
    "pretest": "npm run lint",
    "test": "exit 0",
    "lint": "npm-run-all lint:js lint:flow",
    "lint:js": "eslint src/",
    "lint:flow": "flow check",
    "lint:css": "stylelint 'src/**/*.css'",
    "format": "npm-run-all --parallel format:*",
    "format:js": "eslint src/ --fix",
    "format:css": "find src -path '**/*.css' -exec stylefmt {} \\;",
    "preversion": "npm test",
    "postversion": "npm run release",
    "postpublish": "git push --follow-tags",
    "prerelease": "npm run build",
    "release": "npm publish",
    "postrelease": "npm run docs",
    "predocs": "styleguidist build",
    "docs": "buildbranch gh-pages styleguide"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dialogs/dialog-web-components.git"
  },
  "author": "Nikita Gusakov <gusnkt@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/dialogs/dialog-web-components/issues"
  },
  "homepage": "https://dialogs.github.io/dialog-web-components",
  "dependencies": {
    "@dlghq/dialog-types": "1.2.0",
    "@dlghq/react-l10n": "0.3.1",
    "classnames": "2.2.5",
    "lodash": "4.16.2",
    "react": "15.3.2",
    "react-dom": "15.3.2",
    "react-modal": "1.4.0",
    "react-tether": "0.5.2",
    "webpack": "^1.13.2"
  },
  "devDependencies": {
    "@dlghq/babel-preset-dialog": "2.2.1",
    "@dlghq/eslint-config-dialog": "1.8.0",
    "@dlghq/postcss-dialog": "1.3.0",
    "@dlghq/stylelint-config-dialog": "0.7.0",
    "buildbranch": "1.0.0",
    "chalk": "1.1.3",
    "commander": "2.9.0",
    "ejs": "2.5.2",
    "eslint": "3.6.1",
    "eslint-plugin-react": "6.3.0",
    "flow-bin": "0.32.0",
    "glob": "7.1.0",
    "inquirer": "1.1.3",
    "npm-run-all": "3.1.0",
    "postcss-loader": "0.13.0",
    "pre-commit": "1.1.3",
    "react-styleguidist": "3.1.1",
    "stylefmt": "4.3.1",
    "stylelint": "7.3.1",
    "yml-loader": "1.1.0"
  },
  "pre-commit": {
    "colors": true,
    "run": "test"
  }
}
